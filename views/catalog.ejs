<!-- views/catalog.ejs -->
<%include partials/header%>

<div class="background container-fluid p-5">
       
    <div class="cars-wrapper row ">
        <% cars.forEach ((car, index) => {%>
        <div class="car-container col-lg-4 col-md-6 p-5">
            <div class="car-title align-items-center text-center text-uppercase p-1">
                <span><%=car.car_brand%></span>
                <span><%=car.car_model%></span>
            </div>
            <div class="overlay2">
                <div><img class="img-fluid" src="/<%=car.car_image%>"></div>
                
                <div class="overlay">
                    <a href="/catalog/<%= car.car_brand%>/<%= car.car_model%>" class="text">Voir ce véhicule</a>
                </div>
            </div>
            <div class="car-bottom d-flex justify-content-around align-items-center text-uppercase p-1">
                <span><%=car.car_doors%> portes</span>
                <span><%=car.car_energy%></span>
                <span><%=car.car_price%>€</span>
            </div>
        </div>
        <% })%>
    </div>
    <div class="display-all-brands">
        <a href="/catalog" class="btn btn-danger">Tous les modèles</a>
    </div>
</div>


<%include partials/footer%>